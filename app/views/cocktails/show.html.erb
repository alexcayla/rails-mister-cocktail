<%= render 'shared/navbar' %>

<div class="container">
  <div class="col-lg-8 mx-auto my-3">
    <div class="d-flex align-items-center">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: 'delete-cocktail link_invisible' %>

    </div>

    <div class="d-flex align-middle py-3">
      <h5><strong>Ingredients</strong></h5>
      <!-- On click, show delete dose links. -->
      <button type="button" id="edit-cocktail" class="ml-3">Edit</button>
    </div>
    <%= link_to "Add a new ingredient", new_cocktail_dose_path(params[:id]), class: 'add-ingredient link_invisible' %>

    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.ingredient.name.capitalize %> - <%= dose.description %>
          <span class="delete-dose link_invisible">
            <%= link_to "Delete", dose_path(dose.id), method: :delete, data: {confirm: "Are you sure?"} %>
          </span>
          </li>
      <% end %>
    </ul>

<%= cl_image_tag("dtaveuwoymin5nhqztwr",
      width: 400, height: 300, crop: :fill) %>



    <p><%= link_to "Back to all cocktails", root_path %></p>
  </div>
</div>
